#!/usr/bin/env bash 
  
# Clean the environment 
module purge

# Set working directory to HOME
cd "${HOME}"

# Get Details on the OS of the *container*
source /etc/os-release

#
# Launch Xfce Window Manager and Panel
#
#
if [[ "$ID_LIKE" =~ "fedora" ]]; then
    if [[ "$VERSION_ID" < "8.0" ]]; then
        (
          export SEND_256_COLORS_TO_REMOTE=1
          export XDG_CONFIG_HOME="<%= session.staged_root.join("config") %>"
          export XDG_DATA_HOME="<%= session.staged_root.join("share") %>"
          export XDG_CACHE_HOME="$(mktemp -d)"
          module restore
          set -x
          xfwm4 --compositor=off --daemon --sm-client-disable
          xsetroot -solid "#D3D3D3"
          xfsettingsd --sm-client-disable
          xfce4-panel --sm-client-disable
        ) &
    else
        (
          export XDG_CONFIG_HOME="<%= session.staged_root.join("config") %>"
          export XDG_DATA_HOME="<%= session.staged_root.join("share") %>"
          export XDG_CACHE_HOME="$(mktemp -d)"
          eval $(dbus-launch --sh-syntax)
          xfwm4 --compositor=off --sm-client-disable &
          xsetroot -solid "#D3D3D3"
          xfsettingsd --daemon --sm-client-disable
          xfce4-panel --sm-client-disable
        ) &
    fi
else
    (
      export XDG_CONFIG_HOME="<%= session.staged_root.join("config") %>"
      export XDG_DATA_HOME="<%= session.staged_root.join("share") %>"
      export XDG_CACHE_HOME="$(mktemp -d)"
      eval $(dbus-launch --sh-syntax)
      xfwm4 --compositor=off --sm-client-disable &
      xsetroot -solid "#D3D3D3"
      xfsettingsd --daemon --sm-client-disable
      xfce4-panel --sm-client-disable
    ) &
fi

#
# Start PROGRAM
#

# Load the required environment
module load <%= context.version %>
module list

set -x
# Depending on the application, what you run might be unique

#### ABAQUS
<%- if context.runcommand == "abaqus" %>
# Need to set LANG for plugins to work
export LANG="en_US.UTF-8"
export ABAQUS_USE_LOCALIZATION=1

# Launch Abaqus
set -x
abaqus cae -mesa \
  |& tee "<%= session.staged_root.join("abaqus.log") %>"
ABAQUS_EXIT_CODE=${PIPESTATUS[0]}
{ set +x; } 2>/dev/null

if [[ ${ABAQUS_EXIT_CODE} -ne 0 ]]; then
cat | xmessage -file - -center <<- EOL
ABAQUS/CAE died with the following output:

$(cat "<%= session.staged_root.join("abaqus.log") %>")
EOL
fi

### STATA
<%- elsif context.runcommand == "stata" %>

# Launch stata
# note that xstata-mp doesn't block so we have to watch it
xstata-mp

# Get the PID of the last xstata-mp process started that I own
stata_pid=$( pgrep -u "$USER" 'xstata-mp' | tail )
# As long as the PID directory exists we wait
while [[ -d "/proc/$stata_pid" ]]; do
  sleep 1
done

<%- elsif context.runcommand == "qupath" %>

eval "$(/miniconda/bin/conda shell.bash hook)" && \
	conda activate samapi && uvicorn samapi.main:app --workers 2 &
sleep 100
/QuPath/bin/QuPath

<%- else %>

### EVERYTHING ELSE
<%= context.runcommand %>

<%- end %>
